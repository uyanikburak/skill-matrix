<mvc:View controllerName="skillmatrixui.controller.Homepage"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:table="sap.ui.table"
    xmlns:micro="sap.suite.ui.microchart"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable">
    <Page id="Homepage"
        showHeader="false">
        <f:ShellBar title="{i18n>title}"
            secondTitle="{i18n>homepage}">
            <f:menu>
            </f:menu>
        </f:ShellBar>
        <Table id="skillMatrixTable"
            items="{path: 'skillMatrix>/', templateShareable:true}"
             >
            <columns>
                <!-- <Column>
                    <Text text="Name" />
                </Column>
                <Column>
                    <Text text="Country" />
                </Column>
                <Column>
                    <Text text="Hub" />
                </Column> -->
                <!-- Dynamically create skill columns here -->
                <!-- <Column>
                    <Text text="{skillName}" />
                </Column> -->
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <!-- <Text text="{skillMatrix>fullName}" />
                        <Text text="{skillMatrix>country}" />
                        <Text text="{skillMatrix>hubName}" /> -->
                        <!-- Dynamically bind skill levels here -->
                        <!-- <ProgressIndicator percentValue="{proficiencyLevel}" /> -->
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <footer>
            <OverflowToolbar id="otbFooter">
                <Button id="btnMessages"
                    icon="sap-icon://alert"
                    text="{=${message>/}.length}"
                    type="Emphasized"
                    press="onMessagePopoverPress" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
