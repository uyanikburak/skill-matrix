<mvc:View
    controllerName="skillmatrixui.controller.Homepage"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:table="sap.ui.table"
    xmlns:micro="sap.suite.ui.microchart"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
>
    <Page
        id="Homepage"
        showHeader="false"
    >
        <f:ShellBar
            title="{i18n>title}"
            secondTitle="{i18n>homepage}"
        >
            <f:menu>
            </f:menu>
        </f:ShellBar>
        <FlexBox
            justifyContent="Center"
            alignItems="Center"
        >
            <VBox width="95%">
                <smartFilterBar:SmartFilterBar
                    id="sfbOverview"
                    entitySet="skillMatrix"
                    useProvidedNavigationProperties="true"
                    enableBasicSearch="true"
                    visible="false"
                />
                <smartTable:SmartTable
                    id="stOverview"
                    entitySet="skillMatrix"
                    smartFilterId="sfbOverview"
                    tableType="ResponsiveTable"
                    enableAutoBinding="true"
                    enableExport="true"
                    showFullScreenButton="true"
                    header="{i18n>overview}"
                    showRowCount="true"
                    editTogglable="false"
                    visible="false"

                >
                    <Table
                        id="tblOverview"
                        sticky="ColumnHeaders,HeaderToolbar"
                    >
                    </Table>
                </smartTable:SmartTable>
            </VBox>
        </FlexBox>
        <footer>
            <OverflowToolbar id="otbFooter">
                <Button
                    id="btnMessages"
                    icon="sap-icon://alert"
                    text="{=${message>/}.length}"
                    type="Emphasized"
                    press="onMessagePopoverPress"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
