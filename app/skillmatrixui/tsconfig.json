{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "skipLibCheck": false,
        "allowJs": false,
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "rootDir": "./webapp",
        "outDir": "./dist",
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "skillmatrixui/*": [
                "./webapp/*"
            ],
          
        },
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@sapui5/types"
        ]
    },
    "include": [
        "./webapp/**/*"
    ]
}