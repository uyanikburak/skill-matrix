{
  "name": "com.ndbs.skillmatrixui",
  "version": "1.0.0",
  "description": "UI5 Application: com.ndbs.skillmatrixui",
  "author": "Burak Uyanik",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf dist coverage",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "build:opt": "ui5 build self-contained --clean-dest --all",
    "start": "ui5 serve --port 8080 -o index.html",
    "start-cdn": "ui5 serve --port 8080 -o index-cdn.html",
    "start:dist": "npm start -- --config ui5-dist.yaml",
    "start:dist-cdn": "npm run start-cdn -- --config ui5-dist.yaml",
    "ts-typecheck": "tsc --noEmit",
    "lint": "eslint webapp",
    "karma": "karma start",
    "karma-ci": "karma start karma-ci.conf.js",
    "karma-ci-cov": "karma start karma-ci-cov.conf.js",
    "test": "npm run lint && npm run karma-ci-cov",
    "wdi5": "wdio run ./webapp/test/e2e/wdio.conf.ts",
    "watch-skillmatrixui": "cds watch --open skillmatrixui/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy skill-matrix --delete-services --delete-service-keys --delete-service-brokers",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "devDependencies": {
    "@openui5/types": "^1.127.0",
    "@sap/ux-specification": "^1.120.17",
    "@sapui5/types": "1.127.1",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@ui5/cli": "^4.0.3",
    "@wdio/cli": "^9.0.7",
    "@wdio/local-runner": "^8.40.3",
    "@wdio/mocha-framework": "^8.40.3",
    "@wdio/spec-reporter": "^8.40.3",
    "cds-plugin-ui5": "^0.9.3",
    "eslint": "^8.57.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-ui5": "^4.0.1",
    "karma-ui5-transpile": "^3.4.7",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "ui5-middleware-livereload": "^3.0.3",
    "ui5-tooling-transpile": "^3.4.7",
    "wdio-ui5-service": "^2.0.9"
  },
  "dependencies": {
    "@sap/cds": "^6.8.4"
  },
  "workspaces": [
    "app/*"
  ]
}
